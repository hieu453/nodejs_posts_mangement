<%- include('../layouts/header') %>
<div class="container-scroller">
<%- include('../layouts/navbar') %>
<div class="container-fluid page-body-wrapper">
<%- include('../layouts/sidebar') %>
<div class="main-panel">
<div class="content-wrapper">

<div class="row">
    <div class="col-md-12">
        <% if (typeof message != 'undefined') { %>
            <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                <%= message.text %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <div class="card">
            <div class="card-header">
                <h3>Users
                    <a href="/admin/create-user" class="btn btn-sm btn-primary float-end">
                        Add Users
                    </a>
                </h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Chức vụ</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users.length > 0) { %>
                            <% let i = 0 %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= ++i %></td>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.role == 1) { %>
                                            <label class="badge btn btn-primary">Admin</label>    
                                        <% } else { %>
                                            <label class="badge btn btn-success">User</label>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/edit-user/<%= user._id %>" class="btn btn-sm btn-success">Edit</a>
                                        <a onclick="return confirm('Are you sure you want to delete this user?')" href="{{ url('admin/users/'. $user->id .'/delete') }}" class="btn btn-sm btn-danger">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5">No Users</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>

</div>
</div>
</div>
</div>
<%- include('../layouts/footer') %>