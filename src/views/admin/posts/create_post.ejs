<%- include('../layouts/header') %>
<div class="container-scroller">
<%- include('../layouts/navbar') %>
<div class="container-fluid page-body-wrapper">
<%- include('../layouts/sidebar') %>
<div class="main-panel">
<div class="content-wrapper">

<div class="card-header">
    <h3>
        <a href="/admin/all-posts" class="btn btn-sm btn-primary float-end">
            Trở lại
        </a>
    </h3>
</div>
<div class="container py-3">
    <form method="POST" action="/admin/create-post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tiêu đề</label>
            <input type="text" name="title" class="form-control" placeholder="Type your title">
        </div>
        <div class="form-group">
            <label>Ảnh</label>
            <input type="file" name="image" class="form-control" placeholder="Chọn ảnh">
        </div>
        <div class="form-group">
            <label>Nội dung</label>
            <textarea id="editor" name="description" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>

</div>
</div>
</div>
</div>
