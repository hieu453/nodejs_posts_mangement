<%- include('../layouts/header') %>

<div class="container py-3">
    <form method="POST" action="/user/edit-post/<%= post._id %>" enctype="multipart/form-data">
        <div class="form-group">
          <label>Tiêu đề</label>
          <input type="text" name="title" class="form-control" placeholder="Type your title" value="<%= post.title %>">
        </div>
        <div class="form-group">
          <label>Ảnh</label>
          <input type="file" name="image" class="form-control" placeholder="Chọn ảnh">
          <img src="/uploads/post_image/<%= post.image %>" alt="" >
          <input type="hidden" name="old_image" value="<%= post.image %>">
        </div>
        <div class="form-group">
          <label>Nội dung</label>
          <textarea id="editor" name="description" class="form-control" cols="30" rows="10"><%- post.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>

<%- include('../layouts/footer') %>